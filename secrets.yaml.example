# secrets.yaml.example
#
# Copy this file to secrets.yaml and fill in your actual values.
# secrets.yaml is listed in .gitignore and should NEVER be committed.
#
# ESPHome reads this automatically when you use !secret <key> in your YAML.
# Place secrets.yaml in the same directory as your ESPHome config files
# (or in your ESPHome config root if using the dashboard).
#
# To generate a new API encryption key and OTA password, run:
#   esphome generate-secrets

# ── WiFi ──────────────────────────────────────────────────────────────────────
wifi_ssid: "your_wifi_network_name"
wifi_password: "your_wifi_password"

# Fallback AP password shown in captive portal if WiFi connection fails
ap_password: "your_fallback_ap_password"

# ── ESPHome API ───────────────────────────────────────────────────────────────
# 32-byte base64 key used to encrypt the native API connection to Home Assistant
# Generate with: esphome generate-secrets  (or openssl rand -base64 32)
api_key: "your_32_byte_base64_api_encryption_key="

# ── OTA Updates ───────────────────────────────────────────────────────────────
ota_password: "your_ota_password"
